{
    "navigationFallback": {
        "rewrite": "/index.html",
        "exclude": [
            "/images/*.{png,jpg,gif}",
            "/css/*",
            "/ts/*"
        ]
    },
    "routes": [
        {
            "route": "/login",
            "rewrite": "https://digitaltrailsuva.b2clogin.com/digitaltrailsuva.onmicrosoft.com/oauth2/v2.0/authorize?p=B2C_1_SignUpSignIn&client_id=AZURE_CLIENT_ID&nonce=defaultNonce&redirect_uri=https%3A%2F%2Fdigital-trails.org%2Fapi%2Fv1%2Faccesstoken&scope=openid&response_type=code&prompt=login"
        },
        {
            "route": "/logout",
            "redirect": "/.auth/logout"
        },
        {
            "route": "/dashboard*",
            "allowedRoles": [
                "authenticated"
            ]
        },
        {
            "route": "/api/v1/health-check",
            "methods": [
                "GET",
                "POST",
                "PUT",
                "DELETE"
            ],
            "allowedRoles": [
                "authenticated"
            ]
        }
    ],
    "responseOverrides": {
        "401": {
            "statusCode": 302,
            "redirect": "/login?post_login_redirect_uri=.referrer"
        }
    }
}