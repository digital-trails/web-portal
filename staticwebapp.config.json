{
    "navigationFallback": {
        "rewrite": "/index.html",
        "exclude": [
            "/images/*.{png,jpg,gif}",
            "/css/*",
            "/ts/*"
        ]
    },
    "routes": [
        {
            "route": "/login",
            "rewrite": "/.auth/login/b2c"
        },
        {
            "route": "/logout",
            "redirect": "/.auth/logout"
        },
        {
            "route": "/dashboard*",
            "allowedRoles": [
                "authenticated"
            ]
        },
        {
            "route": "/api/v1/health-check",
            "methods": [
                "GET",
                "POST",
                "PUT",
                "DELETE"
            ],
            "allowedRoles": [
                "authenticated"
            ]
        }
    ],
    "responseOverrides": {
        "401": {
            "statusCode": 302,
            "redirect": "/login?post_login_redirect_uri=.referrer"
        }
    },
    "auth": {
        "identityProviders": {
            "customOpenIdConnectProviders": {
                "b2c": {
                    "registration": {
                        "clientIdSettingName": "AZURE_CLIENT_ID",
                        "clientCredential": {
                            "clientSecretSettingName": "AZURE_CLIENT_SECRET_APP_SETTING_NAME"
                        },
                        "openIdConnectConfiguration": {
                            "wellKnownOpenIdConfiguration": "https://digitaltrailsuva.b2clogin.com/digitaltrailsuva.onmicrosoft.com/B2C_1_SignUpSignIn/v2.0/.well-known/openid-configuration"
                        }
                    },
                    "login": {
                        "nameClaimType": "emails",
                        "scopes": [
                            "openid",
                            "profile",
                            "https://graph.microsoft.com/User.ReadWrite.All"
                        ],
                        "loginParameterNames": []
                    }
                }
            }
        }
    }
}